{% extends 'base.html.twig' %}

{% block title %}Hello Sae23Controller!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter article</h1>

    <form action="/sae23/ajouttarticle" method="post" enctype="multipart/form-data">
    <div class="form-group">
  		<label class="col-form-label mt-4" for="inputnom">Nom de l'article : </label>
  		<input type="text" class="form-control" name="nom" id="nom">
	</div>
    <div class="form-group">
      <label for="imagef" class="form-label mt-4">Chosisez l'image</label>
      <input class="form-control" type="file" name="image" id="image">
    </div>
    <div class="form-group">
  		<label class="col-form-label mt-4" for="inputprix">Prix de l'article : </label>
  		<input type="text" class="form-control" name="prixx" id="prix">
	</div>
    <button type="submit" class="btn btn-primary">Ajouter</button>
  	</form>

</div>
{% endblock %}
